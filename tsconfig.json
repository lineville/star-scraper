{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Bun",

  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "module": "NodeNext",
    "target": "es2020",
    "outDir": "bin",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "types": ["bun-types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.d.ts"]
}
